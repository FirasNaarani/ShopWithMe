@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/style.css">
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*Login Button Style*@
    <style>
        .button {
            display: inline-block;
            border-radius: 4px;
            background-color: #f4511e;
            border: none;
            color: #FFFFFF;
            text-align: center;
            font-size: 20px;
            width: 200px;
            height: 50px;
            transition: all 0.5s;
            cursor: pointer;
            margin: 5px;
        }

            .button span {
                cursor: pointer;
                display: inline-block;
                position: relative;
                transition: 0.5s;
            }

                .button span:after {
                    content: '\00bb';
                    position: absolute;
                    opacity: 0;
                    top: 0;
                    right: -20px;
                    transition: 0.5s;
                }

            .button:hover span {
                padding-right: 25px;
            }

                .button:hover span:after {
                    opacity: 1;
                    right: 0;
                }
    </style>
</head>

<body>
    <div class="text-center">
        <h1 class="display-4">.:: Welcome To Shop With Me ::.</h1>
        <hr />
        <div>
            <h4 style="border: 5px outset red; background-color:lavender; text-align: center;">
                .:: Join Us And Make It Easy , Don't Waste Time ::.
            </h4>
            @*<button class="button" style="vertical-align:middle" asp-area="" asp-controller="Home" asp-action="Privacy"><span>Login</span></button>*@
        </div>
    </div>

    <div>
        <section class="home">
            <div id="carousel" class="carousel slide" data-ride="carousel" style="height:inherit">
                <div class="carousel-controls">
                    <ol class="carousel-indicators">
                        <li data-target="#carousel" data-slide-to="0" class="active"</li>
                        <li data-target="#carousel" data-slide-to="1"></li>
                        <li data-target="#carousel" data-slide-to="2"></li>

                    </ol>
                    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                        <img src="~/Pic/left-arrow.svg" alt="Prev">
                    </a>
