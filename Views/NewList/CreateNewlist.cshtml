@using ShopWithMe
@model Favorites_Products

@{
    ViewData["Title"] = "CreateNewlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateNewlist</h1>
<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">New list</th>
                <th scope="col">Favorites</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">
                    <ul class="list-group">
                        @foreach (string product in Model.Products)
                        {

                            <li class="list-group-item">
                                @Html.DisplayFor(modelItem => product)

                                @Html.ActionLink("Delete", "Delete_product", "NewList", new { Page_type = "CreateNewlist", Nameproduct = product, listproducts = Model.Products, favorites = Model.Favorites }, new { @class = "btn btn-primary" })
                            </li>
                        }

                    </ul>
                </th>

                <th scope="row">
                    <table>
                        <tr row="3">
                            @for (int i = 1; i <= Model.Favorites.Count; i++)
                            {
                                <td>

                                    <p>@Html.DisplayFor(modelItem => Model.Favorites[i - 1])</p>
                                    <img src="@Model.Urls[i - 1]" alt="ring Photo" width="100" height="100" />
                                    @using (Html.BeginForm("Add_Update", "NewList", new { Page_type = "CreateNewlist", Nameproduct = Model.Favorites[i - 1], listproducts = Model.Products, favorites = Model.Favorites }))
                                    {
                                        <input type="number" value="1" name="quantity" />
                                        <p><input type="submit" value="add" class="btn btn-primary" /></p>}
                                </td>
                                @if (i % 4 == 0)
                                {
                                    <script>
                                        document.write("</tr><tr>");
                                    </script>
                                }
                            }
                        </tr>

                    </table>

                </th>
            </tr>

        </tbody>

    </table>

    @using (Html.BeginForm("Add_Update", "NewList", new { Page_type = "CreateNewlist", listproducts = Model.Products, favorites = Model.Favorites }))
    {
        <div class="form-group">
            <a>Add/Update Product</a>
            <input type="text" name="Nameproduct" required />
            <input type="number" value="1" name="quantity" />
            <input type="submit" value="add" class="btn btn-primary" />
        </div>
    }
</div>
<div>
    @using (Html.BeginForm("Save", "NewList", new { listproducts = Model.Products, favorites = Model.Favorites }))

    {<div class="form-group">
            <a>List Name</a>

            <input type="text" name="namelist" required />
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    }
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>