@model ShopWithMe.Models.Item

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        h1 {
            text-shadow: 2px 2px gold;
            font-family: Garamond, serif;
        }

        h3 {
            text-shadow: 2px 2px red;
            font-family: Garamond, serif;
        }

        .item_table {
            background-color: lightgray;
            text-align: center;
            width: 100%;
            border: 5px double gold;
            margin: 20px;
        }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 300px;
            margin: auto;
            text-align: center;
            font-family: arial;
            width: 100%;
        }

        .price {
            color: grey;
            font-size: 22px;
        }

        .card button {
            border: none;
            outline: 0;
            padding: 12px;
            color: white;
            background-color: #000;
            text-align: center;
            cursor: pointer;
            width: 100%;
            font-size: 18px;
        }

            .card button:hover {
                opacity: 0.7;
            }
    </style>
</head>

<body style="background-image: url(https://smallaxepeppers.com/wp-content/uploads/2019/05/Fresh-farmers-market-fruit-and-vegetable-from-above-with-copy-space-e1432779252529.jpg)">
    <div style="opacity:90%;background-color:darkgrey">
        <center>
            <h1>.:: Delete Item ::.</h1>
            <hr />
            <h3>Are you sure you want to delete this?</h3>
            <hr />
        </center>



        <div class="card">
            <img src="@Model.Url" alt="@Html.DisplayFor(model => model.Name)" style="width:90%">
            <h1>@Html.DisplayFor(model => model.Name)</h1>
            <p class="price">@Html.DisplayFor(model => model.Type)</p>
        </div>
        <br />
        <center>
            <div>
                <form asp-action="Delete">
                    <input type="submit" value="Delete" class="btn btn-danger" style="width:200px" />
                    <br />
                    <a asp-action="Index">>> Back to List <<</a>
                </form>
            </div>
        </center>
    </div>
</body>