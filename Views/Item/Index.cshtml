@model IEnumerable<ShopWithMe.Models.Item>

@{
    ViewData["Title"] = "My Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <h1>.:: My Items ::.</h1>
    <hr />
    <p>
        <a asp-action="Create">>> Create New Item <<</a>
    </p>
    <hr />
</center>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@item.Url" alt="Empty Photo" width="100" height:="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @item.Price.ToString("₪#,##0.00")
            </td>
          
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id, name = item.Name }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, name = item.Name }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, name = item.Name })
            </td>
        </tr>
}
    </tbody>
</table>
